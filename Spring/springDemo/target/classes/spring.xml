<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="addr1" class="com.arusa.springDemo.Address">
    	<property name="zipcode" value="111111"> </property>
    	<property name="city" value="Ratnagiri"> </property>
		<property name="state" value="Maharashtra"> </property>
    </bean>
    <bean id="emp1" class="com.arusa.springDemo.Employee">
    	<property name="eid" value="103"> </property>
    	<property name="ename" value="Jack"> </property>
		<constructor-arg ref="addr1"></constructor-arg>
    </bean>

</beans>

